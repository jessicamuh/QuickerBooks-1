@model QuickerBooksApp.Models.AccountsModel

@{
    ViewBag.Title = "Add Account";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Accounts</title>
    <style type="text/css">
        body {
            font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
            font-size: 12pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
            background-color: #fff;
          width:400px
        }

            table th {
                background-color: #3c8dbc;
                color: #333;
                font-weight: bold;
            }

            table th, table td {
                padding: 5px;
                border: 1px solid #ccc;
            }

            table, table table td {
                border: 0px solid #ccc;
            }

        input[type=text], select {
            width: 150px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Accounts", FormMethod.Post))
    {
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Account Details</th>
        </tr>
        <tr>
            <td>Account Name: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Account Number: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Account Description: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountDescription, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Normal Side: </td>
            <td>
                @Html.TextBoxFor(m => m.NormalSide, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Account Category: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountCategory, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Account Sub-category: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountSubcategory, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Initial Balance: </td>
            <td>
                @Html.TextBoxFor(m => m.InitialBalance, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Debit: </td>
            <td>
                @Html.TextBoxFor(m => m.Debit, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Credit: </td>
            <td>
                @Html.TextBoxFor(m => m.Credit, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Balance: </td>
            <td>
                @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Account Order: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountOrder, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Account State: </td>
            <td>
                @Html.TextBoxFor(m => m.AccountState, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Term: </td>
            <td>
                @Html.TextBoxFor(m => m.Comment, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>Comments: </td>
            <td>
                @Html.TextAreaFor(m => m.Comment, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
    }

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    @if (Model != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("Account has been sucessfully added");
            });
        </script>
    }
</body>
</html>
